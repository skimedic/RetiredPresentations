<Window x:Class="WPFDemo.A_Layouts.SelectorExamples"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="SelectorExamples" Height="300" Width="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="20"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<ListBox Grid.Row="0">
			<ListBoxItem>
				<StackPanel Orientation="Horizontal">
					<CheckBox VerticalAlignment="Center"/>
					<Label Content="First Item"/>
				</StackPanel>
			</ListBoxItem>
			<ListBoxItem>
				<StackPanel Orientation="Horizontal">
					<CheckBox VerticalAlignment="Center"/>
					<Label Content="Second Item"/>
				</StackPanel>
			</ListBoxItem>
			<ListBoxItem>
				<StackPanel Orientation="Horizontal">
					<CheckBox VerticalAlignment="Center"/>
					<Label Content="Third Item"/>
				</StackPanel>
			</ListBoxItem>
			<ListBoxItem>
				<StackPanel Orientation="Horizontal">
					<CheckBox VerticalAlignment="Center"/>
					<Label Content="Fourth Item"/>
				</StackPanel>
			</ListBoxItem>
		</ListBox>
		<ComboBox Grid.Row="2">
			<ComboBoxItem Content="First Item"/>
			<ComboBoxItem Content="Second Item"/>
			<ComboBoxItem Content="Third Item"/>
			<ComboBoxItem Content="Fourth Item"/>
			<ComboBoxItem Content="Fifth Item"/>
			<ComboBoxItem Content="Sixth Item"/>
			<ComboBoxItem Content="Seventh Item"/>
		</ComboBox>
	</Grid>
</Window>
