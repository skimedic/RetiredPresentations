<Window x:Class="WPFDemo.A_Layouts.NestedLayouts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NestedLayouts" Height="182.4" Width="257.6">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
			<Button Content="OK" Margin="5,0,10,0"/>
			<Button Content="Cancel" Margin="0,0,5,0"/>
		</StackPanel>
		<TextBox DockPanel.Dock="Top">Here's the Dialog</TextBox>
	</DockPanel>
</Window>
